{
  "command": {
    "publish": {
      "tempTag": true
    },
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
      "exact": true,
      "message": "chore(release): %s"
    },
    "packages": [
      "packages/*"
    ],
    "changelog": {
      "repo": "davidlin88/monorepo-example",
      "labels": {
        "PR: Bug Fix": ":bug: Bug Fix",
        "PR: New Feature": ":rocket: New Features",
        "PR: Documentation": ":memo: Documentation"
      },
      "cacheDir": ".changelog"
    }
  },
  "packages": [
    "packages/*"
  ],
  "version": "0.0.4"
}